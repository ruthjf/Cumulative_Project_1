@model Cumulative_Project_1.Models.Teacher

@{
    ViewBag.Title = "Update";
}

<h2>Update Teacher Information</h2>
<nav>
    <div id="t-back"><a class="navlink" href="/Teacher/Show/@Model.TeacherId">Return to Teacher</a></div>
</nav>
<form method="POST" action="/Teacher/Update/@Model.TeacherId" id="new-form">
    <div id="inner-form">
        <div>
            <label for="TeacherFname">First Name:</label>
            <input type="text" name="TeacherFname" id="TeacherFname" value="@Model.TeacherFname" />
        </div>
        <div>
            <label for="TeacherLname">Last Name:</label>
            <input type="text" name="TeacherLname" id="TeacherLname" value="@Model.TeacherLname" />
        </div>
        <div>
            <label for="EmployeeNumber">Employee Number:</label>
            <input type="text" name="EmployeeNumber" id="EmployeeNumber" value="@Model.EmployeeNumber" />
        </div>
        <div>
            <label for="HireDate">Hire Date:</label>
            <input type="datetime" name="HireDate" id="HireDate" value="@Model.HireDate" />
        </div>
        <div>
            <label for="TeacherSalary">Salary:</label>
            <input type="number" name="TeacherSalary" id="TeacherSalary" value="@Model.TeacherSalary" />
        </div>
    </div>
        <div id="c-button">
            <input type="submit" value="Update Teacher" class="button"/>
        </div>
</form>